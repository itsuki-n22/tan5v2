<% @title = "登録情報変更" %>
<h1><%= @title %></h1>

<div id="input-form">
 <%= form_with model: @user, url: :user, local: true do |f| %>
   <%= render "form", f: f %>
     <%= f.submit "登録", class: "btn btn-primary" %>
     <%= link_to "キャンセル", :root, class: "btn btn-default"  %>
 <% end %>
 <%= link_to "ユーザー削除", user_path(@user), method: :delete, data: {confirm: "本当に削除しますか？"} ,class: "btn btn-danger btn-xs" %>
</div>
