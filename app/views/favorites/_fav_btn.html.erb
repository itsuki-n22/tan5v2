<%= form_with model: Favorite ,url: change_favorite_path, id: 'favorite-no-' + wordnote.id.to_s do |f| %>
  <%= f.hidden_field :user_id, value: wordnote.user_id %>
  <%= f.hidden_field :wordnote_id, value: wordnote.id %>
  <%  @current_user.get_favorite(wordnote_id: wordnote.id) ? btn_class = 'favorited btn' : btn_class = 'btn' %>
  <%= button_tag type: "submit", class: btn_class do %>
    <i class="fa fa-star"></i>
  <% end %>
<% end %>
