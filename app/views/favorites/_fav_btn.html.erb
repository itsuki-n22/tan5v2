  <% btn_class = '' %>
  <%= form_with model: Favorite ,url: change_favorite_path, id: 'favorite-no-' + wordnote.id.to_s do |f| %>
    <%= f.hidden_field :user_id, value: user.id %>
    <%= f.hidden_field :wordnote_id, value: wordnote.id %>
    <%= f.hidden_field :current_user_id, value: current_user.id %>
    <%  current_user.get_favorite(wordnote_id: wordnote.id) ? btn_class = 'favorited' : btn_class = '' %>
    <%= button_tag type: "submit", style: "border-style: none;", class: btn_class do %>
      <i class="fa fa-star"></i>
    <% end %>
  <% end %>
