if (<%= @wordnotes.size %> === 1 ){
  location.reload();
  $('#add-tango-btn').addClass("blink");
} else {
  $('.modal').fadeOut();
  $('#flash-message').html('<span class="alert alert-success"><%= @wordnote.name %>を登録しました</span>').hide().fadeIn(500);
  $(function(){
    setTimeout("$('.alert.alert-success').fadeOut('slow')",2000);
  });
  $('#created-wordnotes').html('<%=j render partial: "/wordnotes/list", locals: { wordnotes: @wordnotes, user: @user} %>').hide().fadeIn(1000);
  $('#tango_register').html('<%=j render partial: "/tangos/form", locals: { wordnotes: @wordnotes, tango: @wordnote.tangos.build, current_user: @current_user} %>').hide().fadeIn(1000);
  $('#wordnote_register').html('<%=j render partial: "/wordnotes/form", locals: { wordnotes: @wordnotes, current_user: @current_user} %>').hide().fadeIn(1000);
}
